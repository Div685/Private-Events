<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div id="successMessage" class="p-0 m-0 d-flex align-items-center">
    <% if flash[:notice] %>
      
        <p class="notice"><%= notice %></p>  
    <% end %>
    </div>

    
    <% if flash[:alert] %>
      <div id="successMessage" class="p-2 d-flex align-items-center">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg align-items-center bg-primary d-flex justify-content-between">
      <div class="logo text-white">
           
          <%= link_to 'U-Events', root_path, class: " text-white font-weight-bold h3" %>
      </div>
      <div class="nav-right d-flex flex-row align-items-center">
        <% if current_user %>
          <div class="btn btn-light mr-2">
            <%= link_to 'Create Event', class: "text-decoration-none" %>
          </div>

          <div class="btn btn-light ml-2" >
            <%= link_to 'Sign Out', sign_out_path, class: "" %>
          </div>
        
        <% else %>
          <div class="text-white">
            <%= link_to 'Sign In', sign_in_path, class: "text-white" %>
          </div>

          <div class="btn btn-light ml-2" >
              <%= link_to 'Sign Up', sign_up_path, class: "" %>
          </div>
        <% end %>
        
      </div>
    </nav>

    <%= yield %>

    

  </body>
</html>
